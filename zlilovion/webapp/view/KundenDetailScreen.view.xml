<mvc:View
    xmlns:cards="sap.f.cards"
    xmlns:form="sap.ui.layout.form"
    xmlns:f="sap.f"
    controllerName="myswd.swd.zlilovion.controller.KundenDetailScreen"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:c="sap.ui.core"
    displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
>
    <Page
        title="Header data"
        navButtonPress="onNavButtonPress"
        showNavButton="true"
    >
        <form:SimpleForm
            id="id-Credits"
            editable="true"
            layout="ColumnLayout"
            labelSpanXL="6"
            labelSpanL="4"
            labelSpanM="8"
            labelSpanS="12"
            adjustLabelSpan="false"
            emptySpanXL="0"
            emptySpanL="0"
            emptySpanM="0"
            emptySpanS="0"
            columnsM="1"
            columnsL="3"
            columnsXL="4"
            singleContainerFullSize="false"
        >
            <core:Title text=" " />
            <Label
                text="Temp. Auftragsnummer"
                design="Bold"
            />
            <Input />
            <Label
                text="Status"
                design="Bold"
            />
            <Input />
            <Text text="Will be inserted" />

            <core:Title text=" " />
            <Label
                text="TBM NR"
                design="Bold"
            />
            <Input />
            <Label
                text="Netzebene"
                design="Bold"
            />
            <Input />

            <core:Title text=" " />
            <Label
                text="Angelegt am"
                design="Bold"
            />
            <Input />
            <Label
                text="Uhrzeit"
                design="Bold"
            />
            <Input />
            <Label
                text="Angelegt von"
                design="Bold"
            />
            <Input />

            <core:Title text=" " />
            <Label
                text="VerkBelegart"
                design="Bold"
            />
            <Input />
            <Label
                text="Verkaufsorg"
                design="Bold"
            />
            <Input />
            <Label
                text="Vertriebsweg"
                design="Bold"
            />
            <Input />
            <Label
                text="Sparte"
                design="Bold"
            />

            <Input />
            <Text text="Wasser" />
            <Label
                text="Debitor"
                design="Bold"
            />
            <Input />
        </form:SimpleForm>

        <Table
            id="id-kunden-detail-Table"
            width="auto"
            mode="SingleSelectMaster"
            showSeparators="Inner"
            autoPopinMode="true"
            alternateRowColors="true"
            itemPress="onKundClickRow"
        >
            <headerToolbar>
                <Toolbar>
                    <Text text="Item data" />
                </Toolbar>
            </headerToolbar>
            <columns>
                <Column>
                    <customData>
                        <c:CustomData
                            key="tableHeaderColor"
                            value="custom"
                            writeToDom="true"
                        />
                    </customData>
                    <Label text="Position" />
                </Column>
                <Column>
                    <customData>
                        <c:CustomData
                            key="tableHeaderColor"
                            value="custom"
                            writeToDom="true"
                        />
                    </customData>
                    <Label text="Fremdsch." />
                </Column>
                <Column>
                    <customData>
                        <c:CustomData
                            key="tableHeaderColor"
                            value="custom"
                            writeToDom="true"
                        />
                    </customData>
                    <Label text="Material" />
                </Column>
                <Column>
                    <customData>
                        <c:CustomData
                            key="tableHeaderColor"
                            value="custom"
                            writeToDom="true"
                        />
                    </customData>
                    <Label text="Work Menge" />
                </Column>
                <Column>
                    <customData>
                        <c:CustomData
                            key="tableHeaderColor"
                            value="custom"
                            writeToDom="true"
                        />
                    </customData>
                    <Label text="BME" />
                </Column>
                <Column>
                    <customData>
                        <c:CustomData
                            key="tableHeaderColor"
                            value="custom"
                            writeToDom="true"
                        />
                    </customData>
                    <Label text="Nettowert" />
                </Column>
            </columns>
            <ColumnListItem>
                <cells>
                    <Text text="" />
                    <Text text="" />
                    <Text text="" />
                    <Text text="" />
                    <Text text="" />

                    <Text text="" />
                </cells>
            </ColumnListItem>
        </Table>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer />
                <Button
                    icon="sap-icon://save"
                    text="Draft save"
                    press="onKundnnextScreen"
                    type="Accept"
                />
                <Button
                    icon="sap-icon://create"
                    text="Create order"
                    press="onKundnnextScreen"
                    type="Success"
                />
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>
