<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
>
    <Dialog
        title="Lovion"
        titleAlignment="Center"
    >
        <RadioButtonGroup
            class="sapUiTinyMargin"
            id="id_radioButton"
            selectedIndex="-1"
        >
            <buttons>
                <RadioButton text="Revision">
                    <customData>
                        <core:CustomData key="Revision" />
                    </customData>
                </RadioButton>
                <RadioButton text="Kundenauftrag" >
                    <customData>
                        <core:CustomData key="SalesOrder" />
                    </customData>
                </RadioButton>
                <RadioButton text="Instandhaltungsauftrag" >
                    <customData>
                        <core:CustomData key="PMOrder" />
                    </customData>
                </RadioButton>
            </buttons>
        </RadioButtonGroup>
        <!-- <Toolbar >
        <ToolbarSpacer />
       
        </Toolbar> -->

        <endButton>
            <Button
                text="Continue"
                type="Accept"
                press="onContinueButton"
                id="id-Continue-Button"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
